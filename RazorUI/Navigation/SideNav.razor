@namespace Daemon.RazorUI.Navigation


<div 
    class="
        group fixed z-10
        hidden sm:flex sm:flex-col 
        pt-4
        sm:w-16 lg:w-64 hover:w-64
        sm:inset-y-0
        bg-stone-800
    "
>
    <div class="flex min-h-0 flex-1 flex-col bg-stone-800">
            <div class="
                h-16 
                flex 
                justify-center items-start lg:justify-start group-hover:justify-start
            ">
                <img 
                    class="
                        flex lg:hidden group-hover:hidden
                        w-10
                    " 
                    src="images/muskokaM.png"
                />
                <img 
                    class="
                        hidden lg:flex group-hover:flex
                        pl-5 group-hover:pl-5
                        w-42
                    " 
                    src="images/muskokaLogo.png"
                />
            </div>
            <div class="mt-3 flex-1 space-y-1 px-2">
                @ChildContent
            </div>
        </div>
        <NavProfile Name="User Name" />
</div>

@code {
    private string NavMenuTitle { get; set; } = "Title";

    [Parameter]
    public RenderFragment? ChildContent { get; set; }
}
