@using Microsoft.AspNetCore.Components.Routing

@using Daemon.RazorUI.Icons

@namespace Daemon.RazorUI.Navigation

<div 
  class=@($@"
    container-wide 
    border-b 
    gap-x-2
    {Class}
  ")
  aria-label="Breadcrumb"
>

  @for(var i = 0; i < Options.Count; i++) {
      var option = Options[i];

      <!-- if statment doesn't work in ChildContent -->
      @if(i == 0) {
         <NavLink 
          href=@option.Path
          class="flex items-center"
        >
          @HomeIcon
        </NavLink>
      } else {
        <NavLink 
          href=@option.Path
          class=@($@"
            flex items-center font-medium transition-hover
            {OptionClass}
          ")
        >
            @option.Label
        </NavLink>
      }

      @if(i != Options.Count-1) {
          <svg 
            class="h-full w-6 flex-shrink-0 text-stone-400" 
            viewBox="0 0 24 44" 
            preserveAspectRatio="none" 
            fill="currentColor" 
            aria-hidden="true"
          >
              <path d="M.293 0l22 22-22 22h1.414l22-22-22-22H.293z" />
          </svg>
      }
  }
</div>


@code {

    [Parameter]
    public List<NavOptionProps> Options { get; set; } = new List<NavOptionProps>();

    [Parameter]
    public RenderFragment? HomeIcon { get; set; }

    [Parameter]
    public string Class { get; set; } = "";

    [Parameter]
    public string OptionClass { get; set; } = "";
}