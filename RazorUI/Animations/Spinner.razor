@namespace Daemon.RazorUI.Animations


<div class="inline-flex">
    <svg class=@_class xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
        <circle class="opacity-25 stroke-slate-900 fill-none" cx="12" cy="12" r="10" stroke-width="4"></circle>
        <path class="opacity-75 fill-slate-100" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
    </svg>
</div>



@code {
    [Parameter]
    public string Class { get; set; } = "";

    private string? _class { 
        get
        {
            string newClass = "animate-spin h-5 w-5";
            if(Class.Any())
            {
                newClass += $" {Class}";
            }
            return newClass;
        }
    }
}
