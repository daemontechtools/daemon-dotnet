@namespace Daemon.RazorUI.Input

<label 
    for="region" 
    class=@($@"
        block 
        font-medium 
        leading-6 
        text-gray-900
        {LabelClass}
    ")
>
    @Label
</label>
<input 
    type="text" 
    name="region" 
    id="region" 
    autocomplete="address-level1" 
    class="
        block w-full 
        rounded-md border-0 
        mt-2
        py-1.5 
        text-gray-900 
        shadow-sm 
        ring-1 ring-inset ring-gray-300 
        placeholder:text-gray-400 
        focus:ring-2 focus:ring-inset focus:ring-sky-500 
        sm:text-sm sm:leading-6
    "
>

@code {
    [Parameter]
    public string Label { get; set; }

    [Parameter]
    public string LabelClass { get; set; }
}