@using Daemon.RazorUI.Icons

@namespace Daemon.RazorUI.Input

<div class="
  flex h-16 
  items-center 
  border-b border-stone-900 
  bg-stone-600 
  text-stone-300
  placeholder:text-stone-300
  shadow-sm 
">
  <div class="container">
    <div class="relative w-full">
      <div class="absolute -left-8">
        <SearchIcon class="w-6 stroke-stone-400" />
      </div> 
      <input 
        id="search-field" 
        class="
            h-full w-full 
            border-0 
            bg-transparent 
            !p-0
            placeholder-stone-400 
            text-stone-100
            focus:ring-0
        " 
        placeholder="Search..." 
        type="search" 
        name="search"
      >
    </div>
  </div>
</div>