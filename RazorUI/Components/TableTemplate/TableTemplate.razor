@namespace Daemon.RazorUI.Components


<ul role="list" class="divide-y divide-gray-100 overflow-hidden ">
  @foreach(var itemProps in ListItems) {
    <RowTemplate Props=@itemProps>
      <Actions>
        @Actions(itemProps)
      </Actions>
    </RowTemplate>
  }
</ul>

@code {
  [Parameter]
  public List<RowTemplateProps> ListItems { get; set; } = new List<RowTemplateProps>();

  [Parameter]
  public RenderFragment<RowTemplateProps>? Actions { get; set; }
}
