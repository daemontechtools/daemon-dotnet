@using static Microsoft.AspNetCore.Components.Web.RenderMode
@rendermode InteractiveServer

@using Daemon.RazorUI.Animations
@using Microsoft.Extensions.Logging

@namespace Daemon.RazorUI.Modal

@inject ModalService _modalService
@inject ILogger<ModalContent> Logger

<div class="sm:flex sm:items-start">
    <div 
        class=@($@"
            mx-auto flex h-12 w-12 flex-shrink-0 
            items-center justify-center rounded-full 
            text-{Input?.Color} bg-red-100 sm:mx-0 sm:h-10 sm:w-10
        ")
    >
        @if(Input?.IconType != null)
        {
            @_icon
        }
    </div>
    <div class="ml-4 mt-0">
        <h3 
            class="
                text-base font-semibold 
                leading-6 text-gray-900 
                text-left
            " 
            id="modal-title"
        >
            @Input?.Title
        </h3>
        <div class="mt-2">
            <p class="text-sm text-gray-500 text-left">@Input?.Description</p>
        </div>
    </div>
</div>
<div class="mt-5 sm:mt-4 sm:flex sm:flex-row-reverse">
    <button 
        type="button" 
        class=@($"daemon-button bg-{Input?.Color}")
        @onclick=@(() => HandleConfirmation(true))
        disabled=@_isLoading
    >
        @if(_isLoading)
        {
            <Spinner Class="text-stone-400 dark:text-stone-400 fill-orange-600"/>
        } 
        else {
            <span>Delete</span>
        }
    </button>
    <button 
        type="button"
        class="daemon-button mr-4"
        @onclick=@(() => HandleConfirmation(false))
        disabled=@_isLoading
    >
        Cancel
    </button>
</div>

@code {

    [Parameter] 
    public ModalContentInput? Input { get; set; }

    private RenderFragment? _icon;
    private bool _isLoading = false;

    private async Task HandleConfirmation(bool confirmed)
    {
        if(Input == null || Input?.OnConfirm == null)
            return;

        _isLoading = true;
        await Input?.OnConfirm?.Invoke(confirmed);
        _isLoading = false;  
    }

    protected override void OnInitialized()
    {
        InitIcon();
    }

    private void InitIcon()
    {
        if (Input?.IconType != null)
        {
            _icon = builder =>
                {
                    builder.OpenComponent(0, Input?.IconType);
                    if (Input?.Color != null)
                    {
                        builder.AddAttribute(1, "Class", $"text-{Input?.Color}");
                    }
                    builder.CloseComponent();
                };
        }
    }

}
